@model IEnumerable<Alarma2._0.Models.Alarm>

@{
    ViewBag.Title = "Index";
}

<h2 style="display: inline-block">Mi Alarma Personal</h2>

<div style="float: right">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.NombreAlarma)</th>
            <th>@Html.DisplayNameFor(model => model.Hora)</th>
            <th>@Html.DisplayNameFor(model => model.Lunes)</th>
            <th>@Html.DisplayNameFor(model => model.Martes)</th>
            <th>@Html.DisplayNameFor(model => model.Miercoles)</th>
            <th>@Html.DisplayNameFor(model => model.Jueves)</th>
            <th>@Html.DisplayNameFor(model => model.Viernes)</th>
            <th>@Html.DisplayNameFor(model => model.Sabado)</th>
            <th>@Html.DisplayNameFor(model => model.Domingo)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NombreAlarma)</td>
                <td>@Html.DisplayFor(modelItem => item.Hora)</td>
                <td>@Html.DisplayFor(modelItem => item.Lunes)</td>
                <td>@Html.DisplayFor(modelItem => item.Martes)</td>
                <td>@Html.DisplayFor(modelItem => item.Miercoles)</td>
                <td>@Html.DisplayFor(modelItem => item.Jueves)</td>
                <td>@Html.DisplayFor(modelItem => item.Viernes)</td>
                <td>@Html.DisplayFor(modelItem => item.Sabado)</td>
                <td>@Html.DisplayFor(modelItem => item.Domingo)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.idAlarma }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.idAlarma }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.idAlarma }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

